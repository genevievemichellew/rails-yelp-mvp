<h1 class="mt-4 mb-4 ms-4 me-4">Review</h1>

<div class="mt-4 mb-4 ms-4 me-4">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, :collection => (0..5) %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-success mt-4" %>
  <% end %>
</div>

<div>
  <%= link_to "Back to restaurant", restaurant_path(@restaurant), class:"mt-4 mb-4 ms-4 me-4" %>
</div>
