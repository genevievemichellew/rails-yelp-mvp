<div class="mt-5 mb-4 ms-4 me-4 pt-1 pb-1 ps-1 pe-1 border rounded border-secondary bg-secondary p-2 text-dark bg-opacity-10">
  <h1 class="mt-4 mb-4 ms-4 me-4"><%= @restaurant.name %></h1>

  <div class="mt-4 mb-4 ms-4 me-4">
    <p><strong>Address: </strong><%= @restaurant.address %></p>
    <p><strong>Phone Number: </strong><%= @restaurant.phone_number %></p>
    <p><strong>Category: </strong><%= @restaurant.category %></p>
  </div>
</div>

<div>
  <%= link_to "Add review", new_restaurant_review_path(@restaurant), class:"btn btn-success mb-4 ms-4 me-4" %>
</div>
<div>
  <%= link_to "Back to all restaurants", restaurants_path, class:"mt-4 mb-4 ms-4 me-4" %>
</div>

<div class="mt-5 mb-4 ms-4 me-4 pt-1 pb-1 ps-1 pe-1 border rounded border-info bg-info p-2 text-dark bg-opacity-25">
  <h2 class="mt-4 mb-4 ms-4 me-4">Reviews:</h2>
  <div class="mt-4 mb-4 ms-4 me-4">
    <% @restaurant.reviews.each do |element| %>
      <p class="pt-3">Rating: <%= element.rating %></p>
      <p><%= element.content %></p>
    <% end %>
  </div>
</div>
